@page "/Watch/{RunID}"
@inject HttpClient Http
@inject NavigationManager navmgr
@inject IJSRuntime JSRuntime;

<h1>Watch</h1>

@if (loading)
{
    <p><em>Loading...</em></p>
    <div class="spinner-border text-success" role="status">
        <span class="sr-only">Loading...</span>
    </div>
}
else
{
    <h1>Ansible Output</h1>
    <iframe style="width:100%; height:200px;border:none;" src="/output/@un?ts=@ts"></iframe>

    <button class="btn btn-primary btn-lg" @onclick="RefreshData">Refresh</button>
}

@code {
    [Parameter]
    public string RunID {get; set;}

    private bool loading = true;

    private string ts = null;
    private string un = null;

    private async void RefreshData() {
            DateTime origin = new DateTime(1970, 1, 1, 0, 0, 0, 0, DateTimeKind.Utc);
            TimeSpan diff = DateTime.Now.ToUniversalTime() - origin;
            ts = Math.Floor(diff.TotalSeconds).ToString();
    }


    protected override async Task OnInitializedAsync()
    {
        loading = true;
        RefreshData();
        un = await JSRuntime.InvokeAsync<string>("getCurrentUserName");
        un = un.ToLower().Replace(" ",".")+".txt";
        loading = false;
    }

}
